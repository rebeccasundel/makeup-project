<form action="/collection/create/edit/{{_id}}" method="post">
        <input type="hidden" name="_id" value="{{_id}}">
        <div class="form-group col-md-4"></div>
        <div class="col-md-4 mb-2">
                <label>Collection Name</label>

                <input class="form-control" type="collection" name="collectionName" value="{{collectionName}}" />
        </div>
        <div class="col-md-4 mb-2">
                <label>Brand</label>
                <input class="form-control" type="text" id="brand-form" name="brand" value="{{brand}}" />
        </div>
        <div class="col-md-4 mb-2">
                <p>Rank your top 3 products</p>
                <label>1.</label>
