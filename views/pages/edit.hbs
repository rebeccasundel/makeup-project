        <div class="col-md-4 mb-2">
                <label>3.</label>
                <input class="form-control" type="name" name="name3" value="{{name3}}" />
        </div>
        {{!-- <input type="name" name="name1" placeholder="product name" /> --}}
        <div class="col-md-4 mb-2">
                <label>Description</label>
                <input class="form-control" type="text" name="description" col="20" value="{{description}}"></input>
